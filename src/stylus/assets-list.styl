@import variables

.assets-list

  width 100%
  height 100%
  overflow-y auto
  .loader 
    width: 64px;
    height: 64px;
    background-image: url(loader-image)
    margin: auto;
    margin-top:20%;
  .assets-list-item
    width 100%

  &.collection-mode
    .assets-list-item
      i.mime 
        margin: auto;
      position: relative
      cursor: pointer
      width: 22%
      float: left
      margin: 5px
      word-wrap: break-word
      text-align: center
      .assets-list-item-close-button
        width: 32px;
        height: 35px;
        background-image:url(close-image)
        position: absolute
        right: -10px
        top: -10px
        opacity 0
        transition-duration: 0.8s;
        transition-property: opacity;
      &:hover
        .assets-list-item-close-button
            display: block
            opacity 1
