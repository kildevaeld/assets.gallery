
.assets-list

  width 100%
  height 100%
  overflow-y auto
  .loader 
    width: 64px;
    height: 64px;
    background-image: url(assets.loader.gif)
    margin: auto;
    margin-top:20%;
  .assets-list-item
    width 100%

  &.collection-mode
    .assets-list-item
      cursor pointer
      width 22%
      float left
      margin 5px
      word-wrap break-word
      text-align center
