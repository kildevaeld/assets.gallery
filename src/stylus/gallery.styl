.assets-gallery {
    display: flex
    flex-direction: column

    
    .gallery-area {
       
        display: flex
        flex: 2
        
        .gallery-list {
            //width: 55%;
            //height: 100%;
            //float: left;
            flex: 2 0
            min-width: 200px
            order: 1
        }
        .gallery-preview {
            flex: initial
            width: 400px;
            min-width: 100px
            order: 2
        }
        
        
        
        
    }
    
    .upload-progress-container {
        height: 5px
        width: 100%;    
        .upload-progress {
            transition 0.6s width ease-in-out
            height: 100%
            background-color: red
            width: 0%
        }
        margin-bottom: 10px
    }
    
    .gallery-toolbar {
        height: 50px
        
    }
}
