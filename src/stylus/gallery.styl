.assets-gallery {
    display: flex
    flex-direction: column

    .gallery-area {
        max-height: 100%
        display: flex
        flex: 2   
        .gallery-list {
            //overflow-y: auto
            //width: 55%;
            //height: 100%;
            //float: left;
            flex: 2 2 auto
            min-width: 200px
            order: 1
        }
        .gallery-preview {
            flex: initial
            width: 400px;
            min-width: 100px
            order: 2
        } 
    }
    
    .upload-progress-container {
        height: 5px
        width: 100%;    
        .upload-progress {
            
            transition 0.6s all ease-in-out
            height: 100%
            background-color: red
            width: 0%
        }
        margin-bottom: 10px
    }
    
    .gallery-toolbar {
        height: 50px   
    }
}
