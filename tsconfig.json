{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./src/dist"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/assets-collection.ts",
        "./src/assets-list.ts",
        "./src/assets-preview.ts",
        "./src/filebutton.ts",
        "./src/fileuploader.ts",
        "./src/gallery.ts",
        "./src/index.ts",
        "./src/preview-handlers.ts",
        "./src/request.ts",
        "./src/templates.ts",
        "./src/thumbnailer.ts",
        "./src/utilities.ts"
    ]
}
